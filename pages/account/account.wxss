/**account.wxss**/
page {
  background-color: #f6f6f6;
}

.account-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 用户信息区域 */
.user-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar, .default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.login-tip {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 30rpx;
}

.login-btn {
  width: 240rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background: #07C160;
  border-radius: 40rpx;
  border: none;
}

.login-btn::after {
  border: none;
}

.logout-btn {
  width: 100% !important;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 40rpx;
  border: none;
}

.logout-btn::after {
  border: none;
}

/* 功能列表 */
.feature-list {
  background: #fff;
  margin-bottom: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-content {
  display: flex;
  align-items: center;
}

.feature-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #333;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}

/* 底部导航栏 */
.tab-bar {
  display: flex;
  height: 110rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}

.tab-text {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: #07C160;
}