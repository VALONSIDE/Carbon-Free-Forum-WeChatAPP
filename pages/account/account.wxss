/**account.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
}

.account-container {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

/* 未登录状态 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.login-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.login-text {
  font-size: 32rpx;
  color: var(--text-secondary-color);
  margin-bottom: 60rpx;
}

.login-button {
  width: 80%;
  background-color: #07C160;
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

/* 已登录状态 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}

.stats-container {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
}

.stat-card {
  flex: 1;
  background-color: var(--card-bg-color);
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  margin: 0 10rpx;
  box-shadow: var(--shadow);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #07C160;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.action-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-item:last-child {
  border-bottom: none;
}

.action-title {
  font-size: 32rpx;
  color: #333;
}

.action-arrow {
  font-size: 32rpx;
  color: #999;
}

.logout-button {
  width: 100%;
  background-color: #f5f5f5;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  margin-top: 20rpx;
}

/* 底部导航栏 */
.tab-bar {
  display: flex;
  height: 110rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}

.tab-text {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: #07C160;
}