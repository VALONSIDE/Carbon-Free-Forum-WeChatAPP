<!--pages/account/account.wxml-->
<view class="account-page">
  <navigation-bar title="我的" color="white" background="#07C160"></navigation-bar>

  <!-- 用户信息区域 -->
  <view class="user-section">
    <block wx:if="{{isLogin}}">
      <view class="user-info">
        <image class="avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
        <view class="user-detail">
          <text class="nickname">{{userInfo.nickName}}</text>
          <text class="user-id">ID: {{userInfo.openid}}</text>
        </view>
      </view>
      <button class="logout-btn" bindtap="handleLogout">退出登录</button>
    </block>
    <block wx:else>
      <view class="login-section">
        <image class="default-avatar" src="/images/default-avatar.png" mode="aspectFill"></image>
        <text class="login-tip">登录后体验更多功能</text>
        <button 
          class="login-btn" 
          bindtap="handleLogin"
          loading="{{loading}}"
        >立即登录</button>
      </view>
    </block>
  </view>

  <!-- 功能列表 -->
  <view class="feature-list">
    <view class="feature-item" bindtap="navigateToMyPosts">
      <view class="feature-content">
        <image class="feature-icon" src="/images/my-posts.png" mode="aspectFit"></image>
        <text class="feature-text">我的帖子</text>
      </view>
      <image class="arrow-icon" src="/images/arrow-right.png" mode="aspectFit"></image>
    </view>

    <view class="feature-item" bindtap="navigateToFavorites">
      <view class="feature-content">
        <image class="feature-icon" src="/images/favorites.png" mode="aspectFit"></image>
        <text class="feature-text">我的收藏</text>
      </view>
      <image class="arrow-icon" src="/images/arrow-right.png" mode="aspectFit"></image>
    </view>

    <view class="feature-item" bindtap="navigateToAbout">
      <view class="feature-content">
        <image class="feature-icon" src="/images/about.png" mode="aspectFit"></image>
        <text class="feature-text">关于我们</text>
      </view>
      <image class="arrow-icon" src="/images/arrow-right.png" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 版本信息 -->
  <view class="version-info">
    <text>版本 1.0.0</text>
  </view>
</view>