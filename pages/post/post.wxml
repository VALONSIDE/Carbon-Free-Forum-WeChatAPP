<!--pages/post/post.wxml-->
<navigation-bar title="帖子详情" back="{{true}}" color="white" background="#07C160"></navigation-bar>

<scroll-view class="scrollarea" scroll-y type="list">
  <view class="post-container">
    <!-- 帖子详情 -->
    <view class="post-detail">
      <image class="post-image" src="{{post.imageUrl}}" mode="widthFix"></image>
      <view class="post-header">
        <view class="post-title">{{post.title}}</view>
        <view class="post-stats">
          <view class="stat-item" catchtap="toggleLike" data-id="{{post.id}}">
            <image class="icon" src="{{post.isLiked ? '/images/liked.png' : '/images/like.png'}}"></image>
            <text>{{post.likes}}</text>
          </view>
          <view class="stat-item">
            <image class="icon" src="/images/comment.png"></image>
            <text>{{post.comments.length}}</text>
          </view>
        </view>
      </view>
      <view class="post-content">{{post.content}}</view>
    </view>
    
    <!-- 评论区 -->
    <view class="comment-section">
      <view class="section-title">评论区</view>
      
      <!-- 评论输入框 -->
      <view class="comment-input-area">
        <view class="comment-input-container" bindtap="showCommentEditor">
          <view class="comment-input-placeholder">写下你的评论...</view>
        </view>
      </view>
      
      <!-- 评论编辑弹窗 -->
      <view class="comment-editor-modal" wx:if="{{showCommentEditor}}">
        <view class="modal-mask" bindtap="hideCommentEditor"></view>
        <view class="modal-content">
          <view class="editor-textarea-container">
            <textarea class="editor-textarea" placeholder="写下你的评论..." value="{{commentText}}" bindinput="onCommentInput" auto-focus maxlength="300" show-confirm-bar="{{false}}"></textarea>
          </view>
          <view class="editor-footer">
            <image class="user-avatar" src="/images/post1.jpg" mode="aspectFill"></image>
            <text class="user-nickname">碳生活用户</text>
            <button class="editor-submit-button" bindtap="submitComment">发布</button>
          </view>
        </view>
      </view>
      
      <!-- 评论列表 -->
      <view class="comment-list">
        <block wx:if="{{post.comments.length > 0}}">
          <view class="comment-item" wx:for="{{post.comments}}" wx:key="id" bindtap="showCommentDetail" data-id="{{item.id}}">
            <image class="comment-avatar" src="{{item.avatar}}" mode="aspectFill"></image>
            <view class="comment-content">
              <view class="comment-user">{{item.username}}</view>
              <view class="comment-text">{{item.content}}</view>
              <view class="comment-footer">
                <view class="comment-time">{{item.time}}</view>
                <view class="reply-count" wx:if="{{item.replies && item.replies.length > 0}}">{{item.replies.length}}条回复</view>
              </view>
            </view>
          </view>
        </block>
        <view wx:else class="no-comment">暂无评论，快来发表第一条评论吧！</view>
      </view>
    </view>
  </view>
</scroll-view>

<!-- 评论详情弹窗 -->
<view class="comment-detail-modal" wx:if="{{showCommentDetail}}">
  <view class="modal-mask" bindtap="hideCommentDetail"></view>
  <view class="modal-content">
    <view class="modal-header">
      <view class="modal-title">评论详情</view>
      <view class="modal-close" bindtap="hideCommentDetail">×</view>
    </view>
    <view class="modal-body">
      <!-- 原评论 -->
      <view class="detail-comment-item">
        <image class="comment-avatar" src="{{currentComment.avatar}}" mode="aspectFill"></image>
        <view class="comment-content">
          <view class="comment-user">{{currentComment.username}}</view>
          <view class="comment-text">{{currentComment.content}}</view>
          <view class="comment-time">{{currentComment.time}}</view>
        </view>
      </view>
      
      <!-- 回复列表 -->
      <view class="reply-list" wx:if="{{currentComment.replies && currentComment.replies.length > 0}}">
        <view class="reply-header">全部回复 ({{currentComment.replies.length}})</view>
        <view class="reply-item" wx:for="{{currentComment.replies}}" wx:key="id">
          <image class="reply-avatar" src="{{item.avatar}}" mode="aspectFill"></image>
          <view class="reply-content">
            <view class="reply-user">{{item.username}}</view>
            <view class="reply-text">{{item.content}}</view>
            <view class="reply-time">{{item.time}}</view>
          </view>
        </view>
      </view>
      <view wx:else class="no-comment">暂无回复，快来发表第一条回复吧！</view>
    </view>
    
    <!-- 回复输入框 -->
    <view class="modal-footer">
      <view class="reply-input-container" bindtap="showReplyEditor">
        <view class="reply-input-placeholder">写下你的回复...</view>
      </view>
    </view>
    
    <!-- 回复编辑弹窗 -->
    <view class="reply-editor-modal" wx:if="{{showReplyEditor}}">
      <view class="modal-mask" bindtap="hideReplyEditor"></view>
      <view class="modal-content">
        <view class="editor-textarea-container">
          <textarea class="editor-textarea" placeholder="写下你的回复..." value="{{replyText}}" bindinput="onReplyInput" auto-focus maxlength="300" show-confirm-bar="{{false}}"></textarea>
        </view>
        <view class="editor-footer">
          <image class="user-avatar" src="/images/post1.jpg" mode="aspectFill"></image>
          <text class="user-nickname">碳生活用户</text>
          <button class="editor-submit-button" bindtap="submitReply">发布</button>
        </view>
      </view>
    </view>
  </view>
</view>