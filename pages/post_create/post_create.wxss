/* pages/post_create/post_create.wxss */
page {
  background-color: #ffffff;
  height: 100vh;
}

.post-create-container {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 44px - env(safe-area-inset-top));
  padding: 30rpx;
  padding-top: calc(env(safe-area-inset-top) + 24rpx);
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background-color: #ffffff;
}

/* 用户信息样式 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-nickname {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

/* 内容编辑区样式 */
.content-edit-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  width: 100%;
}

.content-textarea {
  width: 100%;
  min-height: 300rpx;
  font-size: 30rpx;
  line-height: 1.6;
  padding: 20rpx;
  background-color: #ffffff;
  color: #333333;
  border: none;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.content-textarea::placeholder {
  color: #999999;
}

/* 图片预览区样式 */
.image-preview-area {
  position: relative;
  width: 240rpx;
  height: 240rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.remove-image {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

/* 底部工具栏样式 */
.bottom-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  z-index: 100;
}

.tool-item {
  display: flex;
  align-items: center;
}

.tool-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}

.tool-text {
  font-size: 26rpx;
  color: #666666;
}

/* 发布按钮样式 */
.publish-button {
  background-color: #cccccc;
  color: #ffffff;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
  border: none;
}

.publish-button.active {
  background-color: #07C160;
}